<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Day theme -->
    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your day theme here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <!-- Action Bar -->
        <item name="homeAsUpIndicator">@drawable/ic_chevron_left_black_24dp</item>
    </style>

    <!-- Night theme -->
    <style name="AppTheme.Night" parent="Theme.AppCompat">
        <!-- Customize your night theme here -->
        <item name="colorPrimary">@color/colorSecondary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <!-- Action Bar -->
        <item name="homeAsUpIndicator">@drawable/ic_chevron_left_black_24dp</item>
    </style>

    <style name="Theme.NewsApi" parent="Base.Theme.NewsApi" />
</resources>
